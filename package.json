{
  "name": "ezlinavis",
  "private": true,
  "version": "2.0.0",
  "description": "Easy Linavis - Simple Network Visualization for Literary Texts",
  "author": "Carsten Milling <cmil@hashtable.de>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/dlina/ezlinavis.git"
  },
  "dependencies": {
    "nearley": "^2.8.0",
    "normalize.css": "^5.0.0",
    "prop-types": "^15.5.10",
    "react": "^16.6.0",
    "react-bootstrap": "^0.31.2",
    "react-debounce-input": "^3.0.0",
    "react-dom": "^16.6.0",
    "react-scripts": "2.1.1",
    "react-sigma": "^1.2.17"
  },
  "devDependencies": {
    "eslint-config-xo-react": "^0.17.0",
    "eslint-plugin-react": "^7.11.1",
    "xo": "^0.23.0"
  },
  "scripts": {
    "start": "PORT=8000 react-scripts start",
    "build": "react-scripts build",
    "test": "xo && react-scripts test",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "xo": {
    "extends": "xo-react",
    "space": true,
    "semicolon": true,
    "envs": [
      "browser"
    ],
    "rules": {
      "space-before-function-paren": [
        "error",
        "always"
      ],
      "beforeSelfClosing": "allow",
      "capitalized-comments": 0,
      "func-names": 0,
      "max-params": 0,
      "spaced-comment": 0,
      "import/no-unassigned-import": 0,
      "react/forbid-component-props": 0,
      "react/jsx-no-bind": 0,
      "react/jsx-space-before-closing": 0,
      "react/jsx-tag-spacing": 0,
      "unicorn/filename-case": 0
    },
    "overrides": [
      {
        "files": "src/**.test.js",
        "globals": [
          "it"
        ]
      }
    ],
    "ignores": [
      "src/components/ezlinavis/grammar.js",
      "src/serviceWorker.js"
    ]
  }
}
